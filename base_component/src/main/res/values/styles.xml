<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/s_round_group_white</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="loading_dialog_transparent_bg" parent="loading_dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="loading_dialog_bg_net" parent="loading_dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="dialog_enter_exit">
        <!-- 指定显示的动画xml -->
        <item name="android:windowEnterAnimation">@anim/pop_enter</item>
        <!-- 指定消失的动画xml -->
        <item name="android:windowExitAnimation">@anim/pop_exit</item>
    </style>
</resources>